{
  "name": "mobu-utils",
  "publisher": "NilsSoderman",
  "displayName": "MotionBuilder Utils",
  "description": "Features to assist when writing Python code for Autodesk MotionBuilder. IntelliSense, debug, execute code in MotionBuilder & browse the documentation with ease.",
  "version": "1.2.3",
  "categories": [
    "Other",
    "Debuggers"
  ],
  "keywords": [
    "motionbuilder",
    "mobu",
    "python",
    "pyfbsdk",
    "autodesk",
    "autocompletion",
    "debug",
    "intellisense"
  ],
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#444444",
    "theme": "dark"
  },
  "qna": "marketplace",
  "license": "SEE LICENSE IN LICENSE",
  "author": {
    "name": "Nils SÃ¶derman",
    "url": "https://nilssoderman.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nils-soderman/vscode-motionbuilder"
  },
  "bugs": {
    "url": "https://github.com/nils-soderman/vscode-motionbuilder/issues"
  },
  "homepage": "https://nilssoderman.com/downloads/vscode/motionbuilder-utils/",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "motionbuilder.execute",
        "title": "Execute",
        "category": "MotionBuilder",
        "enablement": "editorLangId==python"
      },
      {
        "command": "motionbuilder.attach",
        "title": "Attach",
        "category": "MotionBuilder"
      },
      {
        "command": "motionbuilder.browseDocumentation",
        "title": "Browse Documentation",
        "category": "MotionBuilder"
      },
      {
        "command": "motionbuilder.browseDocumentationPython",
        "title": "Browse Documentation (Python)",
        "category": "MotionBuilder"
      },
      {
        "command": "motionbuilder.browseDocumentationC",
        "title": "Browse Documentation (C++)",
        "category": "MotionBuilder"
      },
      {
        "command": "motionbuilder.browseDocumentationExamples",
        "title": "Browse Documentation (Examples)",
        "category": "MotionBuilder"
      }
    ],
    "keybindings": [
      {
        "command": "motionbuilder.execute",
        "key": "ctrl+enter",
        "when": "editorTextFocus && config.motionbuilder.execute.enableShortcut"
      },
      {
        "command": "motionbuilder.browseDocumentationC",
        "key": "ctrl+f1"
      }
    ],
    "configuration": [
      {
        "order": 0,
        "properties": {
          "motionbuilder.version": {
            "title": "Version",
            "type": "integer",
            "enum": [
              2022,
              2023
            ],
            "default": 2023,
            "description": "Which version to use for intellisense & when browsing documentation.",
            "scope": "resource",
            "order": 0
          },
          "motionbuilder.documentation.openExamplesInEditor": {
            "type": "boolean",
            "default": true,
            "description": "Open up the example files in editor, instead of the web-browser.",
            "scope": "resource",
            "order": 1
          },
          "motionbuilder.debug.port": {
            "type": "integer",
            "default": 4243,
            "description": "The port to run the debug server on when attaching to MotionBuilder.",
            "minimum": 0,
            "maximum": 65353,
            "scope": "resource",
            "order": 2
          }
        }
      },
      {
        "title": "Execute",
        "order": 1,
        "properties": {
          "motionbuilder.execute.enableShortcut": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Enable the `motionbuilder.execute` command, can be used to disable the command in spesific workspaces.",
            "scope": "resource",
            "order": 0
          },
          "motionbuilder.execute.showOutput": {
            "type": "boolean",
            "default": true,
            "description": "Display the output log when something is executed",
            "scope": "resource",
            "order": 1
          },
          "motionbuilder.execute.clearOutput": {
            "type": "boolean",
            "default": false,
            "description": "Clear output log each time somethings new is executed.",
            "scope": "resource",
            "order": 2
          },
          "motionbuilder.execute.name": {
            "type": "string",
            "default": "",
            "markdownDescription": "The value for the Python variable `__name__`",
            "scope": "resource",
            "order": 3
          }
        }
      },
      {
        "title": "Stub Files",
        "order": 2,
        "properties": {
          "motionbuilder.stubFiles.copyOnStartup": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Should MotionBuilder stub files be copied to `motionbuilder.stubFiles.copyPath` on startup?",
            "order": 0
          },
          "motionbuilder.stubFiles.patchPythonPathConfig": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "On startup, patch config `python.analysis.extraPaths` to include the path given in `motionbuilder.stubFiles.copyPath` ?",
            "order": 1
          },
          "motionbuilder.stubFiles.copyPath": {
            "type": "string",
            "default": "%APPDATA%/VSCode-MotionBuilder-Utils/mobu-sdk/",
            "markdownDescription": "Path where to place the motionbuilder stub files.",
            "order": 2
          }
        }
      }
    ]
  },
  "engines": {
    "vscode": "^1.62.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:uninstall": "node ./out/hooks/uninstall-hook",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.2.2",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "node-html-parser": "^5.2.0",
    "open": "^8.4.0"
  }
}
