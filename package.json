{
  "name": "mobu-utils",
  "publisher": "NilsSoderman",
  "displayName": "MotionBuilder Utils",
  "description": "Features to assist when writing Python code for Autodesk MotionBuilder. Auto-completion, Run code in MotionBuilder & browse the documentation with ease.",
  "keywords": [
    "motionbuilder",
    "mobu",
    "python",
    "pyfbsdk",
    "autodesk",
    "autocompletion",
    "debug"
  ],
  "qna": "marketplace",
  "icon": "media/mobu-icon.png",
  "version": "1.1.1",
  "engines": {
    "vscode": "^1.62.0"
  },
  "author": {
    "name": "Nils SÃ¶derman",
    "url": "https://nilssoderman.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nils-soderman/vscode-motionbuilder"
  },
  "bugs": {
    "url": "https://github.com/nils-soderman/vscode-motionbuilder/issues"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "motionbuilder.execute",
        "title": "Execute",
        "category": "MotionBuilder"
      },
      {
        "command": "motionbuilder.attach",
        "title": "Attach",
        "category": "MotionBuilder"
      },
      {
        "command": "motionbuilder.browseDocumentation",
        "title": "Browse Documentation",
        "category": "MotionBuilder"
      },
      {
        "command": "motionbuilder.browseDocumentationPython",
        "title": "Browse Documentation (Python)",
        "category": "MotionBuilder"
      },
      {
        "command": "motionbuilder.browseDocumentationC",
        "title": "Browse Documentation (C++)",
        "category": "MotionBuilder"
      },
      {
        "command": "motionbuilder.browseDocumentationExamples",
        "title": "Browse Documentation (Examples)",
        "category": "MotionBuilder"
      }
    ],
    "keybindings": [
      {
        "command": "motionbuilder.execute",
        "key": "ctrl+enter",
        "when": "editorTextFocus && editorLangId == python"
      },
      {
        "command": "motionbuilder.attach"
      },
      {
        "command": "motionbuilder.browseDocumentationFull"
      },
      {
        "command": "motionbuilder.browseDocumentationC",
        "key": "ctrl+f1"
      },
      {
        "command": "motionbuilder.browseDocumentationExamples"
      },
      {
        "command": "motionbuilder.browseDocumentationPython"
      }
    ],
    "configuration": [
      {
        "title": "MotionBuilder Utils",
        "properties": {
          "motionbuilder.version": {
            "type": "integer",
            "enum": [
              2022,
              2023
            ],
            "default": 2023,
            "description": "Which version to use for intellisense & when browsing documentation."
          },
          "motionbuilder.execute.showOutput": {
            "type": "boolean",
            "default": true,
            "description": "Display the output log when something is executed"
          },
          "motionbuilder.execute.clearOutput": {
            "type": "boolean",
            "default": false,
            "description": "Clear output each time somethings new is executed."
          },
          "motionbuilder.documentation.openExamplesInEditor": {
            "type": "boolean",
            "default": true,
            "description": "Open up the examples files in editor, instead of the web-browser."
          },
          "motionbuilder.autocompletion.patchOnActivated": {
            "type": "boolean",
            "default": true,
            "description": "Patch auto-completion when extention is activated."
          },
          "motionbuilder.autocompletion.sdkCopyPath": {
            "type": "string",
            "description": "Where to place the MoBu SDK files. By default they will be placed under APPDATA"
          },
          "motionbuilder.debug.port": {
            "type": "integer",
            "default": 4243,
            "description": "The port to use when attaching to MotionBuilder."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "node-html-parser": "^5.2.0"
  }
}
