{
    "files.exclude": {
        ".vscode-test": true,
        "node_modules": true,
        "dist": true,
        "**/__pycache__": true,
        "*.vsix": true,
        "package-lock.json": true,
        "LICENSE": true,
    },
    "search.exclude": {
        "media": true,
        "resources": true,
        "out": true,
        "test": true
    },

    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",

    "pylint.args": [
        "--rcfile=.pylintrc",
    ],

    "python.formatting.autopep8Args": [
        "--max-line-length=120",
        "--ignore=E402",
    ],

    "python.analysis.extraPaths": [
        "./build-scripts/python/site-packages",
        "resources/stub-files"
    ]
}